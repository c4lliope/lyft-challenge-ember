<div id="map" class="map"></div>

<script>
  var directionsDisplayA;
  var directionsDisplayB;
  var directionsDisplayPickup;
  var directionsDisplayDropoff;
  var map;

  function initialize() {
    directionsDisplayA = new google.maps.DirectionsRenderer({polylineOptions: { strokeColor: '#FF0000' }})
    directionsDisplayB = new google.maps.DirectionsRenderer({polylineOptions: { strokeColor: '#0000FF' }})
    directionsDisplayPickup = new google.maps.DirectionsRenderer({polylineOptions: { strokeColor: '#00FF00', opacity: 0.5 }})
    directionsDisplayDropoff = new google.maps.DirectionsRenderer({polylineOptions: { strokeColor: '#00FF00', opacity: 0.5 }})
    var sanFran = new google.maps.LatLng(37.802139, -122.41874);
    var mapOptions = {
      zoom: 12,
      center: sanFran
    }
    map = new google.maps.Map(document.getElementById("map"), mapOptions);
    directionsDisplayA.setMap(map);
    directionsDisplayB.setMap(map);
    directionsDisplayPickup.setMap(map);
    directionsDisplayDropoff.setMap(map);
  }

  function displayRoute(directionsDisplay, start, end) {
    var directionsService = new google.maps.DirectionsService();
    var request = {
      origin:start,
      destination:end,
      travelMode: google.maps.TravelMode.DRIVING
    };
    directionsService.route(request, function(result, status) {
      if (status == google.maps.DirectionsStatus.OK) {
        directionsDisplay.setDirections(result);
        } else {
        /* TODO Gracefully handle errors */
        alert('ohno: ' + start + " to " + end);
      }
    });
  }

  var latLngBounds;
  var ajaxCallsRemaining;
  function centerMap(points) {
    latLngBounds = new google.maps.LatLngBounds();
    ajaxCallsRemaining = 4;

    for (var i = 0; i < 4; i++) {
      var point = points[i];
      var googlePoint;
      if(point.get('latLong')) {
        latLngBounds.extend(new google.maps.LatLng(point.get('latitude'), point.get('longitude')));
        --ajaxCallsRemaining;
        centerMapIfFinished();
        } else {
        var geocoder = new google.maps.Geocoder();
        var request = { address: point.get('address') };

        geocoder.geocode(request, function(result, status) {
          latLngBounds.extend(result[0].geometry.location);

          --ajaxCallsRemaining;
          centerMapIfFinished();
        });
      }
    }
  }

  function centerMapIfFinished() {
    if (ajaxCallsRemaining <= 0) {
      map.fitBounds(latLngBounds);
      map.setZoom(map.getZoom()-1);
    }
  }

  google.maps.event.addDomListener(window, 'load', initialize);
</script>
